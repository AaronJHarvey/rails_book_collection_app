<%= form_for(@book) do |f|%>
<%= render 'shared/book_error_messages' %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
<br>
<br>
<%= f.label :author %>
<br>
<%= f.text_field :author %>
<br>
<br>
<%= f.label :genre_id %>
<br>
<%= collection_select(:book, :genre_id, Genre.all, :id, :name,{}, {:multiple => false})%>
<br>
<%= f.label "Read" %>
  <%= f.check_box :read %> <br>
  <%= f.hidden_field :user_id, value: current_user_id %>
  <%= f.submit%>
  <% end %>

  <br>
  <br>
  <br>
  <%=link_to "Log out", logout_path, method: :delete %>
